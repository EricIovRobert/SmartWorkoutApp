{% extends 'base.html.twig' %}

{% block body %}
    <title>{% block title %}{{ exercise.name }}{% endblock %}</title>
    <div class="container my-5 text-white">
        <div class="text-center mb-5">
            <h1>{{ exercise.name }}</h1>
        </div>

        {% if exercise is not empty %}
            <div class="card bg-light text-dark mb-3 rounded-lg">
                <div class="card-body">
                    <h5 class="card-title text-center">Details</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <p><strong>Category:</strong> {{ exercise.tip.nume }}</p>
                        </li>
                        <li class="mb-2">
                            <p><strong>Description:</strong> {{ exercise.description }}</p>
                        </li>
                        <li class="mb-2">
                            <div class="embed-responsive embed-responsive-16by9">
                                <iframe class="embed-responsive-item" src="{{ exercise.linkVideo | replace({'watch?v=': 'embed/'}) }}" allowfullscreen style="width: 100%; height: 100%;"></iframe>
                            </div>
                        </li>
                        <li class="mb-2 text-center">
                            <a href="/exercise/{{ exercise.id }}/edit" class="btn btn-orange mt-3">Edit exercise</a>
                        </li>
                        <li class="mb-2 text-center">
                            <a href="/exercise/{{ exercise.id }}/delete" class="btn btn-danger mt-3">Delete exercise</a>
                        </li>
                    </ul>
                </div>
            </div>
        {% else %}
            <p class="text-center">No exercises found.</p>
        {% endif %}

        <div class="text-right">
            <button class="btn btn-secondary" onclick="history.back()">Back</button>
        </div>
    </div>

    <style>
        .rounded-lg {
            border-radius: 15px;
        }

        .embed-responsive-16by9 {
            position: relative;
            display: block;
            width: 100%;
            padding: 0;
            overflow: hidden;
            padding-top: 56.25%;
            margin-top: 25px;
        }

        .embed-responsive-item {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0;
        }

        .btn-orange {
            background-color: #ff6600;
            color: #fff;
        }
    </style>
{% endblock %}
