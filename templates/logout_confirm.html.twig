{% extends 'base.html.twig' %}

{% block title %}Logout Confirmation{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card bg-dark text-white">
            <div class="card-body text-center">
                <h1 class="card-title">Logout Confirmation</h1>
                <p class="card-text">Are you sure you want to log out?</p>
                <div class="form-group">
                    <a href="{{ path('app_logout') }}" class="btn btn-danger mx-2">Yes, log out</a>
                    <button class="btn btn-secondary mx-2" type="button" onclick="history.back()">Cancel</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
