{% extends 'base.html.twig' %}

{% block title %}Delete {{ type }}{% endblock %}

{% block body %}
    {% if not form.vars.valid %}
        <div class="alert alert-danger">
            {{ form_errors(form) }}
        </div>
    {% endif %}
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card bg-dark text-white">
            <div class="card-body text-center">
                <h1 class="card-title">Delete {{ type }}</h1>
                <p class="card-text">Are you sure you want to delete this {{ type }}?</p>

                {{ form_start(form, {'attr': {'class': 'form-group'}}) }}
                <div class="form-group">
                    {{ form_widget(form.delete, {'attr': {'class': 'btn btn-danger mx-2'}}) }}
                    <button class="btn btn-secondary mx-2" type="button" onclick="history.back()">Cancel</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
