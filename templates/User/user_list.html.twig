{% extends 'base.html.twig' %}

{% block body %}
    <title>{% block title %}People{% endblock %}</title>
        <div class="container my-5 text-white">

            <h1 class="text-center">People</h1>
            <br>
            {% if users is not empty %}
                <div class="row" align="center">
                    {% for user in users %}
                        <div class="col-md-4 my-3">
                            <div class="card h-100 bg-light text-dark rounded-card">
                                <div class="card-body">
                                    <div class="thumb-lg member-thumb mx-auto">
                                        <img src="https://bootdey.com/img/Content/avatar/avatar{{ user.id % 9 + 1 }}.png" class="rounded-circle img-thumbnail" alt="profile">
                                    </div>
                                    <h5  class="card-title">
                                        {{ user.nume }}
                                    </h5>
                                    <a href="/user/{{ user.id }}" class="btn btn-orange mt-3">View Profile</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
        {% else %}
            <p class="text-center">No users found</p>
        {% endif %}
            <ul class="pagination pagination-split mt-0 justify-content-center">
                <li class="page-item"><a class="page-link" href="#" aria-label="Previous"><span aria-hidden="true">«</span> <span class="sr-only"></span></a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#" aria-label="Next"><span aria-hidden="true">»</span> <span class="sr-only"></span></a></li>
            </ul>
        <div class="text-center mt-5">
            <button class="btn btn-secondary" onclick="history.back()">Back</button>
        </div>

        </div>
    <style>
        .rounded-card {
            border-radius: 15px;
            transition: transform 0.3s;
        }

        .rounded-card:hover {
            transform: translateY(-5px);
        }
        .pagination{
            color: orange;
        }

    </style>


{% endblock %}