{% extends 'base.html.twig' %}

{% block body %}
    <title>{% block title %}People{% endblock %}</title>
        <div class="container my-5 text-white">

            <h1 class="text-center">People</h1>
            <br>
            {% if users is not empty %}
                <div class="row" align="center">
                    {% for user in users %}
                        <div class="col-md-4 my-3">
                            <div class="card h-100 bg-light text-dark rounded-card">
                                <div class="card-body">
                                    <div class="thumb-lg member-thumb mx-auto">
                                        <img src="https://bootdey.com/img/Content/avatar/avatar{{ user.id % 9 + 1 }}.png" class="rounded-circle img-thumbnail" alt="profile">
                                    </div>
                                    <h5  class="card-title">
                                        {{ user.nume }}
                                    </h5>
                                    <a href="/user/{{ user.id }}" class="btn btn-orange mt-3">View Profile</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
        {% else %}
            <p class="text-center">No users found</p>
        {% endif %}
            <nav aria-label="Page navigation example" >

                <ul class="pagination justify-content-center" >
                    {% if currentPage > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="?page={{ currentPage - 1 }}">Previous</a>
                        </li>
                    {% endif %}

                    {% for page in 1..totalPages %}
                        <li class="page-item {% if page == currentPage %}active{% endif %}">
                            <a class="page-link" href="?page={{ page }}">{{ page }}</a>
                        </li>
                    {% endfor %}

                    {% if currentPage < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="?page={{ currentPage + 1 }}">Next</a>
                        </li>
                    {% endif %}
                </ul>

            </nav>
        <div class="text-center mt-5">
            <button class="btn btn-secondary" onclick="history.back()">Back</button>
        </div>

        </div>
    <style>
        .rounded-card {
            border-radius: 15px;
            transition: transform 0.3s;
        }

        .rounded-card:hover {
            transform: translateY(-5px);
        }
        .pagination{
            color: orange;
        }

    </style>


{% endblock %}