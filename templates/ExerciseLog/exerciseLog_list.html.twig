{% extends 'base.html.twig' %}

{% block body %}
    <title>{% block title %}Exercise Logs for {{ workout.name }}{% endblock %}</title>
    <div class="container my-5 text-white">
        <h1 class="text-center">Exercise Logs for {{ workout.name }}</h1>
        <br>
        <div class="d-flex justify-content-end mb-3">
            <a href="/workout/{{ workout.id }}/add-exerciselog" class="btn btn-orange">Add Exercise Log</a>
        </div>
        {% if exerciseLogs is not empty %}
            <div class="row" align="center">
                <div class="col-12">
                    <table class="table table-striped table-dark rounded-table">
                        <thead>
                        <tr>
                            <th>Exercise Name</th>
                            <th>Number of Reps</th>
                            <th>Duration (min)</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for log in exerciseLogs %}
                            <tr>
                                <td>{{ log.exercise.name }}</td>
                                <td>{{ log.nrReps }}</td>
                                <td>{{ log.duration|date('i:s') }}</td>
                                <td>
                                    <a href="/exercise_log/{{ log.id }}/edit" class="btn btn-primary btn-sm me-2">Edit</a>
                                    <a href="/exercise_log/{{ log.id }}/delete" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% else %}
            <p class="text-center">No exercise logs found for this workout.</p>
        {% endif %}
        <div class="text-center mt-3">
            <a href="/workouts" class="btn btn-secondary">Back to Workouts</a>
        </div>
    </div>

    <style>
        .rounded-table {
            border-radius: 15px;
            overflow: hidden;
        }

        .rounded-table thead {
            background-color: #343a40;
        }

        .rounded-table tbody tr {
            transition: transform 0.3s;
        }

        .rounded-table tbody tr:hover {
            transform: translateY(-5px);
        }

        .btn-block {
            display: block;
            width: 100%;
        }

        .me-2 {
            margin-right: 0.5rem;
        }
    </style>
{% endblock %}
