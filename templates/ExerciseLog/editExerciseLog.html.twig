{% extends 'base.html.twig' %}

{% block body %}
    {% if not form.vars.valid %}
        <div class="alert alert-danger">
            {{ form_errors(form) }}
            <ul>
                {% for child in form %}
                    {% if child.vars.errors is defined and child.vars.errors|length > 0 %}
                        <li>{{ child.vars.errors[0].message }}</li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    <title>{% block title %}Editing "{{ ex.exercise.name }} from "{{ ex.workout.name }}"{% endblock %}</title>
    <div class="container my-5 text-white d-flex flex-column align-items-center">
        <div class="text-center mb-5">
            <h1>Editing "{{ ex.exercise.name }} from "{{ ex.workout.name }}"</h1>
        </div>

        <div class="card bg-light text-dark mb-5 w-75">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                <div class="form-group mb-3">
                    {{ form_label(form.exercise, 'Exercise', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.exercise, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.nr_reps, 'Number of Reps', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nr_reps, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.duration, 'Duration', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.duration, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group text-center mb-3">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-orange'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="text-center">
            <a href="{{ path('exercise_log_list', {'id': ex.workout.id}) }}" class="btn btn-secondary">Back</a>
        </div>
    </div>
{% endblock %}
